
<%= render 'admins/header' %>

<div class="container-fluid">
  <div class="row">
    <%= render 'admins/sidebar' %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

      <h2>Users</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Email</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td></td>
              <td></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
