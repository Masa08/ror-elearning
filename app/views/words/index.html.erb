<%= render 'layouts/header' %>
<div class=" words_image">
  <h1 class="words_title">Words</h1>
</div>
<div class="container pt50">
    <div class="row">
      <div class="categories_all col-lg-12 text-center">
        <h2 class="text-center wf-mplus1p mb-4 gradient-border font-weight-light">Words</h2>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th></th>
                        <th>Content</th>
                        <th>Category</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <% @words.each do |word| %>
                <tbody>
                    <tr>
                        <th><%= word.id %></th>
                        <th><%= word.content %></th>
                        <th><%= word.category.title %></th>
                        <% if word.category.lessons.where(user_id: current_user.id).any? %>
                            <th>You have already learned</th>
                        <% else %>
                            <th></th>
                        <% end %>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
        <%= will_paginate(:renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer)  %>
      </div>
    </div>
</div>
<%= render 'layouts/footer' %>
