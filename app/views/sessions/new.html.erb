<%= render 'layouts/header' %>
<div class="container pt50">
    <div class="row">
        <div class="col-md-4 col-md-offset-3 form-signin text-center">
            <h1>Sign In</h1>
            <% flash.each do |message_type, message| %>
                <div class="alert alert-<%= message_type %>"><%= message %></div>
            <% end %>
            <%= form_for(:session, url: login_path) do |f| %>
                <div class="form-label-group">
                    <%= f.label :email %>
                    <%= f.email_field :email, :class => 'form-control', :placeholder => 'Please write your email' %>
                </div>
                <div class="form-label-group">
                    <%= f.label :password %>
                    <%= f.password_field :password, :class => 'form-control', :placeholder => 'Please write your password' %>
                </div>

                <%= f.label :remenber_me, class: "checkbox inline" do %>
                  <%= f.check_box :remenber_me %>
                  <span>Remember me on this computer</span>
                <% end %>

                <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
            <% end %>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>
