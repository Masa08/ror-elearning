<%= render 'layouts/header' %>
<div class="container pt50">
    <div class="row">
        <div class="col-md-4 col-md-offset-3 form-signin text-center">
            <h1>Sign up</h1>
            <%= render 'layouts/error_messages' %>
            <%= form_for(@user) do |f| %>
                <div class="form-label-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, :class => 'form-control', :placeholder => 'Please write your name' %>
                </div>
                <div class="form-label-group">
                    <%= f.label :image %><br>
                    <%= f.file_field :image %>
                    <%= f.hidden_field :image_cache %>
                </div>
                <div class="form-label-group">
                    <%= f.label :email %>
                    <%= f.email_field :email, :class => 'form-control', :placeholder => 'Please write your email' %>
                </div>
                <div class="form-label-group">
                    <%= f.label :password %>
                    <%= f.password_field :password, :class => 'form-control', :placeholder => 'Please write your password' %>
                </div>
                <div class="form-label-group">
                    <%= f.label :password_confirmation, "Confirmation" %>
                    <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Please write your password' %>
                </div>
                <%= f.submit "Edit my account", class: "btn btn-lg btn-primary btn-block" %>
            <% end %>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>
