<%= render 'layouts/header' %>
<div class="container pt50">
    <div class="row">
        <div class="categories_all col-lg-12 text-center">
            <h2 class="text-center wf-mplus1p mb-4 gradient-border font-weight-light">Learned Lessons</h2>
            <% @lessons.each do |lesson| %>
                <div class="card box-shadow col-lg-4 fl">
                    <div class="card-body">
                        <p class="card-text">Title:<%= lesson.category.title %></p>
                        <p><%= lesson.category.description  %></p>
                        <p>word_numbers: <%= lesson.category.words.count %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group m0">
                                <%= link_to "Result", lesson_path(lesson.id), class: "btn btn-outline-secondary" %>
                            </div>
                        </div>
                     </div>
                 </div>
            <% end %>
            <%#= will_paginate(:renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: "clear")  %>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>
